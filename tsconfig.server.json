{
    "compilerOptions": {
      "target": "ES2017",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es6",
        "es5"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "ES2015",
      "moduleResolution": "node",
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
  
      /* for typeORM */
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts",
      "dist/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true
    }
}