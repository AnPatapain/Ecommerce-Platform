{
  "name": "backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "-------- Dev scripts --------": "",
    "dev": "nodemon --watch 'src/**/*' --ext ts --exec 'ts-node --project tsconfig.json src/server.ts'",
    "-------- Build scripts --------": "",
    "build": "tsc --project tsconfig.build.json",
    "-------- Prod scripts --------": "",
    "prod": "node dist/backend/src/server.js"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "express": "^4.19.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "typescript": "^5.2.2"
  }
}
