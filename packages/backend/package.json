{
  "name": "@app/backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "-------- Dev scripts --------": "",
    "dev": "pnpm run prisma:create_tables && pnpm run prisma:generate_client && nodemon --watch 'src/**/*' --ext ts --exec 'pnpm run build:tsoa && ts-node --project tsconfig.json src/server.ts'",
    "-------- Build scripts --------": "",
    "build:tsoa": "tsoa spec-and-routes",
    "-------- Other scripts --------": "",
    "prisma:create_tables": "prisma migrate dev --name create_tables",
    "prisma:generate_client": "prisma generate"
  },
  "dependencies": {
    "@app/shared-models": "workspace:*",
    "@app/shared-utils": "workspace:*",
    "@prisma/client": "5.20.0",
    "@tsoa/runtime": "^6.4.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nodemailer": "^6.9.16",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-ui-express": "^4.1.6",
    "nodemon": "^3.1.0",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  }
}
