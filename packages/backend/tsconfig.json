{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["node_modules/@app/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": [
    "src/**/*.ts",
    "package.json",
  ],
}
