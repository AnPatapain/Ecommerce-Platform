{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["src/controllers/*.controller.ts"],
  "spec": {
    "outputDirectory": "tsoa",
    "specVersion": 3,
    "securityDefinitions": {
      "token": {
        "type": "apiKey",
        "name": "x-api-key",
        "in": "header"
      }
    }
  },
  "routes": {
    "routesDir": "tsoa",
    "authenticationModule": "src/security/auth.handler.ts"
  }
}